# FreelancePro Dashboard - SaaS Environment Configuration

# Application Settings
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://app.freelancepro.io

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/freelancepro-saas
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_REFRESH_EXPIRE=30d

# Bcrypt Configuration
BCRYPT_ROUNDS=12

# Stripe Configuration (Required for SaaS)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs - Starter Plan
STRIPE_STARTER_MONTHLY_PRICE_ID=price_starter_monthly_id
STRIPE_STARTER_YEARLY_PRICE_ID=price_starter_yearly_id

# Stripe Price IDs - Pro Plan
STRIPE_PRO_MONTHLY_PRICE_ID=price_pro_monthly_id
STRIPE_PRO_YEARLY_PRICE_ID=price_pro_yearly_id

# Stripe Price IDs - Team Plan
STRIPE_TEAM_MONTHLY_PRICE_ID=price_team_monthly_id
STRIPE_TEAM_YEARLY_PRICE_ID=price_team_yearly_id

# Stripe Price IDs - Agency Plan
STRIPE_AGENCY_MONTHLY_PRICE_ID=price_agency_monthly_id
STRIPE_AGENCY_YEARLY_PRICE_ID=price_agency_yearly_id

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM='"FreelancePro" <noreply@freelancepro.io>'

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token
SEGMENT_WRITE_KEY=your-segment-write-key

# Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Storage Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=freelancepro-uploads
AWS_REGION=us-east-1

# Feature Flags
ENABLE_TRIAL=true
TRIAL_DAYS=14
ENABLE_REFERRAL_PROGRAM=true
REFERRAL_DISCOUNT_PERCENT=20
ENABLE_ANNUAL_DISCOUNT=true
ANNUAL_DISCOUNT_MONTHS=2

# Support Configuration
SUPPORT_EMAIL=support@freelancepro.io
INTERCOM_APP_ID=your-intercom-app-id

# Security
CORS_ORIGIN=https://app.freelancepro.io,https://www.freelancepro.io
SECURE_COOKIES=true
TRUST_PROXY=true

# Webhook URLs (for integrations)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# API Keys for Integrations
ZAPIER_API_KEY=your-zapier-api-key
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret

# Development/Testing (remove in production)
STRIPE_TEST_MODE=false
BYPASS_EMAIL_VERIFICATION=false
LOG_LEVEL=info